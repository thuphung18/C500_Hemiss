@model C500Hemis.Models.TbKyLuatCanBo

@{
    ViewData["Title"] = "XÓA HỒ SƠ";
}

<h1>XÓA HỒ SƠ CÁN BỘ BỊ KỶ LUẬT</h1>

<h3>Đồng chí có muốn xóa hồ sơ này không?
</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Lý do bị kỷ luật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LyDo)
        </dd>
        <dt class = "col-sm-2">
            Ngày nhận quyết định
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayThangNamQuyetDinh)
        </dd>
        <dt class = "col-sm-2">
            Số quyết định
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoQuyetDinh)
        </dd>
        <dt class = "col-sm-2">
            Năm bị kỷ luật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamBiKyLuat)
        </dd>
        <dt class = "col-sm-2">
            ID cán bộ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCanBoNavigation.IdNguoiNavigation.name)
        </dd>
        <dt class = "col-sm-2">
            Cấp quyết định
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCapQuyetDinhNavigation.IdCapKhenThuong)
        </dd>
        <dt class = "col-sm-2">
            Hình thức kỷ luật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdLoaiKyLuatNavigation.IdLoaiKyLuat)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdKyLuatCanBo" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
