@model C500Hemis.Models.TbGiangVienNn

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
            margin-top: 20px;
        }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            color: #553f3a;
            text-align: center;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            width: 100%;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 100%;
                margin-right: 10px;
            }

        .cen {
            text-align: center;
        }

        .custom-btn {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            .custom-btn:hover {
                background-color: #A1D8EC; /* Màu khi hover */
            }
    </style>
</head>

<h1>THÔNG TIN CHI TIẾT</h1>

<div class="container">
    <div class="form-group">
        <label asp-for="IdCanBo" class="control-label"><b>Tên Cán bộ</b></label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdCanBoNavigation.IdNguoiNavigation.name)" readonly>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CoQuanChuQuanOnuocNgoai" class="control-label"><b>Cơ quan chủ quản ở nước ngoài</b></label>
        <div class="col-sm-6">
            <input type="text" class="form-control " value="@Html.DisplayFor(model => model.CoQuanChuQuanOnuocNgoai)" readonly>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IdNoiDungHoatDongTaiVietNam" class="control-label"><b>Nội dung hoạt động tại Việt Nam</b></label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdNoiDungHoatDongTaiVietNamNavigation.NoiDungHoatDongTaiVietNam)" readonly>
        </div>
    </div>
    <div>
        <form asp-action="Edit" asp-route-id="@Model?.IdGvnn" method="get">
            <button type="submit" class="btn btn-primary custom-btn">Chỉnh sửa</button>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-back" style="margin-top:80px; color: #4b9ab4">
        <i class="fa-solid fa-circle-arrow-left"></i>Quay lại danh sách
    </a>
</div>
