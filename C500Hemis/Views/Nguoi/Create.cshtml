                    <span asp-validation-for="IdTrinhDoTinHoc" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary" onclick="window.location.href = '@Url.Action("Index")'">Quay lại</button>
                    <input type="submit" value="Xác nhận" class="btn btn-primary ms-3" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/gh/kirito99152/search_select@latest/search_select.js"></script>
    @*Tạo tìm kiếm cho select list dùng js library*@
    <script>
        var search = new search_select("form");
        search.msg = "Không hợp lệ";
        search.IsNULL = true;
        search.run();
    </script>
}
