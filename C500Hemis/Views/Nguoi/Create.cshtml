@model C500Hemis.Models.TbNguoi

@{
    ViewData["Title"] = "Create";
}

@section Heads{
    <style>
        a, a:visited, a:hover, a:active {
            color: inherit;
            text-decoration: none;
        }
        .form-group{
            width: 48%;
        }
        .form-style{
            gap: 20px;
        }
        .form-container {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);

        }
        .form-container h2 {
            text-align: center;
        }
    </style>
}

<div class="row justify-content-center bg-light p-lg-5">
    <div class="col col-lg-8">
        <form asp-action="Create" id="form">
            <div class="d-flex p-2 flex-wrap form-style justify-content-center form-container">
