@model C500Hemis.Models.TbKhoaBoiDuongTapHuanThamGiaCuaCanBo

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-image: url(https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png);
        background-position: center;
        background-repeat: no-repeat;
        background-color: rgb(230,241,216);
    }
    .row{
        background-color: rgba(230,241,216,0.85);
    }
</style>
<body style=" background-color: rgba(230,241,216,0.85)">
<h1 style="text-align:center">TẠO MỚI</h1>

<h4 style="text-align:center">KHÓA HUẤN LUYỆN TẬP HUẤN THAM GIA CỦA CÁN BỘ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdKhoaBoiDuongTapHuanThamGiaCuaCanBo" class="control-label">ID Khóa bồi dưỡng tập huấn tham gia của cán bộ</label>
                <input asp-for="IdKhoaBoiDuongTapHuanThamGiaCuaCanBo" class="form-control" />
                <span asp-validation-for="IdKhoaBoiDuongTapHuanThamGiaCuaCanBo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCanBo" class="control-label">ID Cán bộ</label>
                <select asp-for="IdCanBo" class ="form-control" asp-items="ViewBag.IdCanBo"></select>
            </div>
            <div class="form-group">
                <label asp-for="TenKhoaBoiDuongTapHuan" class="control-label">Tên khóa bồi dưỡng tập huấn</label>
                <input asp-for="TenKhoaBoiDuongTapHuan" class="form-control" />
                <span asp-validation-for="TenKhoaBoiDuongTapHuan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonViToChuc" class="control-label">Đơn vị tổ chức</label>
                <input asp-for="DonViToChuc" class="form-control" />
                <span asp-validation-for="DonViToChuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLoaiBoiDuong" class="control-label">ID Loại bồi dưỡng</label>
                <select asp-for="IdLoaiBoiDuong" class ="form-control" asp-items="ViewBag.IdLoaiBoiDuong"></select>
            </div>
            <div class="form-group">
                <label asp-for="DiaDiemToChuc" class="control-label">Địa điểm tổ chức</label>
                <input asp-for="DiaDiemToChuc" class="form-control" />
                <span asp-validation-for="DiaDiemToChuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianBatDau" class="control-label">Thời gian bắt đầu</label>
                <input asp-for="ThoiGianBatDau" class="form-control" />
                <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianKetThuc" class="control-label">Thời gian kết thúc</label>
                <input asp-for="ThoiGianKetThuc" class="form-control" />
                <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNguonKinhPhi" class="control-label">ID Nguồn kinh phí</label>
                <select asp-for="IdNguonKinhPhi" class ="form-control" asp-items="ViewBag.IdNguonKinhPhi"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChungChi" class="control-label">Chứng chỉ</label>
                <input asp-for="ChungChi" class="form-control" />
                <span asp-validation-for="ChungChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayCap" class="control-label"> Ngày cấp</label>
                <input asp-for="NgayCap" class="form-control" />
                <span asp-validation-for="NgayCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" style="background-color:darkolivegreen" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
