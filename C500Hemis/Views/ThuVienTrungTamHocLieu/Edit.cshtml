@model C500Hemis.Models.TbThuVienTrungTamHocLieu

@{
    ViewData["Title"] = "Tạo mới";
}

<h1 style="text-align:center"> Chỉnh Sửa </h1>
<hr />

<style>
    body {
        background-color: #f7f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .form-container {
        max-width: 800px;
        margin: auto;
        background-color: #E1F0DA;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h1, h4 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #4CAF50;
            color: #fff;
        }

        table td {
            background-color: #9BC86A;
        }

        table tr:hover {
            background-color: #ddd;
        }

    .form-group label {
        font-weight: bold;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #05c46b;
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.5);
            outline: none;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #05c46b;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #048a55;
            transform: scale(1.05);
        }


    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Hai cột */
        gap: 20px; /* Khoảng cách giữa các phần tử */
    }
</style>
<body>
    <div class="form-container">
        <h4>Thư Viện Trung Tâm Học Liệu</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="IdThuVienTrungTamHocLieu" class="control-label"></label>
                    <input asp-for="IdThuVienTrungTamHocLieu" class="form-control" />
                    <span asp-validation-for="IdThuVienTrungTamHocLieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TenThuVienTrungTamHocLieu" class="control-label"></label>
                    <input asp-for="TenThuVienTrungTamHocLieu" class="form-control" />
                    <span asp-validation-for="TenThuVienTrungTamHocLieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                    <input asp-for="NamDuaVaoSuDung" class="form-control" />
                    <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DienTich" class="control-label"></label>
                    <input asp-for="DienTich" class="form-control" />
                    <span asp-validation-for="DienTich" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DienTichPhongDoc" class="control-label"></label>
                    <input asp-for="DienTichPhongDoc" class="form-control" />
                    <span asp-validation-for="DienTichPhongDoc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoPhongDoc" class="control-label"></label>
                    <input asp-for="SoPhongDoc" class="form-control" />
                    <span asp-validation-for="SoPhongDoc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongMayTinh" class="control-label"></label>
                    <input asp-for="SoLuongMayTinh" class="form-control" />
                    <span asp-validation-for="SoLuongMayTinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongChoNgoi" class="control-label"></label>
                    <input asp-for="SoLuongChoNgoi" class="form-control" />
                    <span asp-validation-for="SoLuongChoNgoi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongSach" class="control-label"></label>
                    <input asp-for="SoLuongSach" class="form-control" />
                    <span asp-validation-for="SoLuongSach" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongTapChi" class="control-label"></label>
                    <input asp-for="SoLuongTapChi" class="form-control" />
                    <span asp-validation-for="SoLuongTapChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongSachDienTu" class="control-label"></label>
                    <input asp-for="SoLuongSachDienTu" class="form-control" />
                    <span asp-validation-for="SoLuongSachDienTu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongTapChiDienTu" class="control-label"></label>
                    <input asp-for="SoLuongTapChiDienTu" class="form-control" />
                    <span asp-validation-for="SoLuongTapChiDienTu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuonngThuVienDienTuLienKetNn" class="control-label"></label>
                    <input asp-for="SoLuonngThuVienDienTuLienKetNn" class="form-control" />
                    <span asp-validation-for="SoLuonngThuVienDienTuLienKetNn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongDauSach" class="control-label"></label>
                    <input asp-for="SoLuongDauSach" class="form-control" />
                    <span asp-validation-for="SoLuongDauSach" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongDauTapChi" class="control-label"></label>
                    <input asp-for="SoLuongDauTapChi" class="form-control" />
                    <span asp-validation-for="SoLuongDauTapChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongDauSachDienTu" class="control-label"></label>
                    <input asp-for="SoLuongDauSachDienTu" class="form-control" />
                    <span asp-validation-for="SoLuongDauSachDienTu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongDauTapChiDienTu" class="control-label"></label>
                    <input asp-for="SoLuongDauTapChiDienTu" class="form-control" />
                    <span asp-validation-for="SoLuongDauTapChiDienTu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdHinhThucSoHuu" class="control-label"></label>
                    <select asp-for="IdHinhThucSoHuu" class="form-control" asp-items="ViewBag.IdHinhThucSoHuu"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdTinhTrangCsvc" class="control-label"></label>
                    <select asp-for="IdTinhTrangCsvc" class="form-control" asp-items="ViewBag.IdTinhTrangCsvc"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <p></p>
                <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}