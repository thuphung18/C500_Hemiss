<link href="~/css/ThuVienTrungTamHocLieu(Index).css" rel="stylesheet">
<h1 align="center">Thông Tin Các Thư Viện Trung Tâm Học Liệu</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<style>
     .btn-create {
         background-color: green;
         color: wheat;
         border: none;
         padding: 10px 20px;
         text-align: center;
         text-decoration: none;
         display: inline-block;
         font-size: 16px;
         margin: 4px 2px;
         cursor: pointer;
         border-radius: 4px;
     }

         .btn-create:hover {
             background-color: #76c776;
         }


     /* CSS để thêm cuộn ngang cho bảng */
     .table-wrapper {
         overflow-x: auto; /* Thêm thanh cuộn ngang */
         max-height: 600px; /* Chiều cao cố định cho bảng */
         overflow-y: auto; /* Thêm thanh cuộn dọc */
     }

     table {
         width: 100%;
     }

     .action-bar {
         display: flex;
         justify-content: space-between;
         align-items: center;
         margin-bottom: 20px;
     }

     .search-form {
         display: flex;
         justify-content: center;
         align-items: center;
         max-width: 600px;
         margin: 0;
     }

     tbody tr:hover {
         font-weight: bold; /*Khi chuột chạy qua thì thay đổi kiểu dáng*/
