
@model C500Hemis.Models.TbNhiemVuKhcn

@{
    // Thiết lập tiêu đề trang
    ViewData["Title"] = "Thông tin chi tiết";
}

@section Heads {
    <!-- Khai báo meta và liên kết các tệp CSS, JavaScript -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Thư viện Font Awesome cho các icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>

    <!-- Font chữ Pridi từ Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pridi:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- CSS tuỳ chỉnh -->
    <style>
        /* Định dạng chung cho body */
        body {
            font-family: "Pridi", serif; /* Sử dụng font Pridi từ Google Fonts */
            font-weight: 500; /* Độ dày của chữ ở mức trung bình */
            font-style: normal; /* Kiểu chữ thông thường */
            background-color: rgb(212, 190, 228); /* Màu nền trang là màu tím nhạt */
        }

        /* Định dạng cho khối container chính */
        .container {
            justify-content: center; /* Căn giữa nội dung */
            align-items: center; /* Căn giữa theo chiều dọc */
            padding: 20px; /* Thêm khoảng cách bên trong */
            font-weight: bold; /* In đậm toàn bộ văn bản */
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.6); /* Đổ bóng nhẹ cho khối container */
            border-radius: 25px; /* Bo góc container */
            background-color: white; /* Màu nền của khối container là màu trắng */
        }

        /* Định dạng cho tiêu đề h1 */
        h1 {
            text-align: center; /* Căn giữa tiêu đề */
            color: purple; /* Màu chữ tiêu đề là tím đậm */
            font-family: "Pridi", serif; /* Sử dụng font Pridi */
            font-weight: 700; /* Độ dày chữ lớn nhất */
            margin-bottom: 30px; /* Khoảng cách phía dưới tiêu đề */
        }

        /* Định dạng cho tiêu đề h3 */
        h3 {
            text-align: center; /* Căn giữa nội dung h3 */
            font-family: "Pridi", serif; /* Font chữ Pridi */
            font-weight: 700; /* In đậm chữ h3 */
        }

        /* Định dạng cho ảnh logo */
        img {
            max-width: 150px; /* Kích thước tối đa của ảnh là 150px */
            display: block; /* Đặt ảnh thành block */
            margin: auto; /* Căn giữa ảnh */
        }

        /* Định dạng cho khối row, sử dụng để trình bày thông tin */
        .row {
            display: flex; /* Sắp xếp các phần tử theo chiều ngang */
            justify-content: space-between; /* Căn đều các mục */
            margin-bottom: 15px; /* Khoảng cách phía dưới giữa các dòng */
            background-color: white; /* Màu nền */
        }

        /* Định dạng cho các mục dt và dd trong danh sách định nghĩa */
        dt, dd {
            flex: 1; /* Căn chia đều không gian */
            text-align: left; /* Canh trái */
            margin: 0;
        }

        dt {
            font-weight: bold; /* In đậm cho tiêu đề */
        }

        dd {
            text-align: right; /* Canh phải cho phần giải thích */
        }

        /* Định dạng cho khối responsive khi độ rộng màn hình nhỏ hơn 768px */
        @@media (max-width: 768px) {
            .row {
                flex-direction: column; /* Chuyển thành sắp xếp theo chiều dọc */
                text-align: center; /* Căn giữa */
            }

            dd {
                text-align: center; /* Canh giữa cho phần giải thích */
            }

            .btn {
                width: 100%; /* Nút chiếm 100% chiều rộng */
            }

            .container {
                padding: 10px; /* Giảm khoảng cách padding */
            }

            dt, dd {
                flex: none; /* Loại bỏ căn chia đều không gian */
            }
        }

        /* Định dạng hiệu ứng hover cho các nút */
        .button_a_back:hover {
            background-color: grey; /* Màu xám khi rê chuột vào */
            color: white; /* Chữ màu trắng khi rê chuột */
        }

        .button_a_edit:hover {
            background-color: orange; /* Màu cam cho nút cập nhật khi rê chuột */
            color: white;
        }

        .button_a_del:hover {
            background-color: red; /* Màu đỏ cho nút xoá khi rê chuột */
            color: white;
        }

        /* Định dạng chung cho các nút */
        .button_a_back, .button_a_edit, .button_a_del {
            border-style: solid; /* Đường viền dạng nét liền */
            border-width: 1px; /* Độ dày viền 1px */
            text-align: center; /* Căn giữa văn bản trong nút */
            padding: 10px 30px; /* Khoảng cách trong nút */
            font-size: 15px; /* Kích cỡ chữ */
            text-decoration: none; /* Bỏ gạch chân */
            border-radius: 35px; /* Bo góc cho nút */
            color: black; /* Màu chữ đen */
            font-weight: bold; /* In đậm chữ */
            width: 50%; /* Chiều rộng nút bằng 50% */
        }

        /* Định dạng cho khối chứa các nút */
        .back {
            width: 100%; /* Chiếm toàn bộ chiều rộng */
            display: flex; /* Sắp xếp các nút theo chiều ngang */
            justify-content: center; /* Căn giữa các nút trong div */
            align-items: center; /* Căn giữa các nút theo chiều dọc */
        }
    </style>
}

<body>

    <!-- Tiêu đề chính của trang -->
    <h1> <i class="fa fa-info-circle"></i> CHI TIẾT HỒ SƠ </h1>

    <!-- Khối chứa thông tin hồ sơ -->
    <div class="container">

        <!-- Logo của học viện -->
        <p style="text-align: center;">
            <img src="https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png" alt="Học viện An ninh nhân dân">
        </p>

        <!-- Tiêu đề hồ sơ với mã nhiệm vụ -->
        <h3>
            Thông tin hồ sơ <p style="color:purple"> @Html.DisplayFor(model => model.MaNhiemVu) </p>
        </h3>

        <hr />

        <!-- Các mục chi tiết thông tin hồ sơ -->
        <dl class="row" style="color:purple; font-weight:bold">
            <dt>Mã nhiệm vụ:</dt>
            <dd>@Html.DisplayFor(model => model.MaNhiemVu)</dd>
        </dl>

        <dl class="row" style="color:purple; font-weight:bold">
            <dt>Tên nhiệm vụ:</dt>
            <dd>@Html.DisplayFor(model => model.TenNhiemVu)</dd>
        </dl>

        <!-- Thông tin bổ sung của hồ sơ, gồm cơ quan chủ trì, người chủ trì, thời gian và kinh phí -->
        <dl class="row">
            <dt>Cơ quan chủ trì:</dt>
            <dd>@Html.DisplayFor(model => model.CoQuanChuTri)</dd>
        </dl>

        <dl class="row">
            <dt>Người chủ trì:</dt>
            <dd>@Html.DisplayFor(model => model.NguoiChuTri)</dd>
        </dl>

        <dl class="row">
            <dt>Thuộc nhiệm vụ:</dt>
            <dd>@Html.DisplayFor(model => model.ThuocNhiemVu)</dd>
        </dl>

        <dl class="row">
            <dt>Tổng kinh phí của nhiệm vụ:</dt>
            <dd>@Html.DisplayFor(model => model.TongKinhPhiCuaNhiemVu)</dd>
        </dl>

        <dl class="row" style="color:purple; font-weight:bold">
            <dt>Thời gian bắt đầu:</dt>
            <dd>@Html.DisplayFor(model => model.ThoiGianBatDau)</dd>
        </dl>

        <dl class="row">
            <dt>Thời gian kết thúc:</dt>
            <dd>@Html.DisplayFor(model => model.ThoiGianKetThuc)</dd>
        </dl>

        <!-- Đánh giá và sản phẩm của nhiệm vụ -->
        <dl class="row">
            <dt>
                Đánh giá kết quả nhiệm vụ:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DanhGiaKetQuaNhiemVu)
            </dd>
        </dl>

        <dl class="row">
            <dt>
                Sản phẩm chính của nhiệm vụ:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SanPhamChinhCuaNhiemVu)
            </dd>
        </dl>

        <dl class="row" style="color:purple; font-weight:bold">
            <dt>
                Cấp quản lý của nhiệm vụ:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdCapQuanLyNhiemVuNavigation.PhanCapNhiemVu)
            </dd>
        </dl>

        <dl class="row">
            <dt>
                Cơ quan chủ quản:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdCoQuanChuQuanNavigation.CoQuanChuQuan)
            </dd>
        </dl>

        <dl class="row">
            <dt>
                Lĩnh vực nghiên cứu:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdLinhVucNghienCuuNavigation.LinhVucNghienCuu)
            </dd>
        </dl>

        <dl class="row">
            <dt>
                Nguồn kinh phí:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdNguonKinhPhiNavigation.NguonKinhPhi)
            </dd>
        </dl>

        <dl class="row" style="color:purple; font-weight:bold">
            <dt>
                Phân loại nhiệm vụ:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdPhanLoaiNhiemVuNavigation.LoaiNhiemVu)
            </dd>
        </dl>

        <dl class="row">
            <dt>
                Tình trạng của nhiệm vụ:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdTinhTrangNhiemVuNavigation.TinhTrangNhiemVu)
            </dd>
        </dl>

        <div class="back">
            <a class="button_a_edit" asp-action="Edit" asp-route-id="@Model?.IdNhiemVuKhcn"> <i class="fa fa-pencil"> </i>Cập nhật</a>
        </div><br />

        <div class="back">
            <a class="button_a_del" asp-action="Delete" asp-route-id="@Model?.IdNhiemVuKhcn"><i class="fa fa-trash"></i>XÓA</a>
        </div><br />

        <div class="back">
            <a class="button_a_back" asp-action="Index"><i class="fa fa-home"></i>Trở về</a>
        </div>
        <br />
        <br />
        <br />


    </div>
    <br />

</body>




