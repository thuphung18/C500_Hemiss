@model C500Hemis.Models.TbHopDongThinhGiang

@{
    ViewData["Title"] = "Create";
}

<style>
    h1 {
        font-family: Apice;
        text-align: center;
        color: #16423C;
    }

    h4 {
        font-family: Apice;
        text-align: center;
    }

    .row {
        background-color: #C4DAD2;
        justify-content: center;
        align-items: center;
        padding: 20px;
        font-weight:bold;
    }

    .btn-primary {
        background-color: #16423C;
        color: #C4DAD2;
    }

        .btn-primary:hover {
            background-color: #6A9C89;
            transform: scale(1.05);
        }
</style>

<h1>Tạo mới</h1>
<h4>Hợp đồng thỉnh giảng</h4>
<hr />

<div class="row">
    <div class="col-md-11">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdHopDongThinhGiang" class="control-label">ID hợp đồng thỉnh giảng</label>
                        <input asp-for="IdHopDongThinhGiang" class="form-control" />
                        <span asp-validation-for="IdHopDongThinhGiang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdCanBo" class="control-label">Mã Cán Bộ</label>
                        <select asp-for="IdCanBo" class="form-control" asp-items="ViewBag.IdCanBo"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaHopDongThinhGiang" class="control-label"></label>
                        <input asp-for="MaHopDongThinhGiang" class="form-control" />
                        <span asp-validation-for="MaHopDongThinhGiang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoSoLaoDong" class="control-label"></label>
                        <input asp-for="SoSoLaoDong" class="form-control" />
                        <span asp-validation-for="SoSoLaoDong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayCapSoLaoDong" class="control-label"></label>
                        <input asp-for="NgayCapSoLaoDong" class="form-control" />
                        <span asp-validation-for="NgayCapSoLaoDong" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NoiCapSoLaoDong" class="control-label"></label>
                        <input asp-for="NoiCapSoLaoDong" class="form-control" />
                        <span asp-validation-for="NoiCapSoLaoDong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoGiaTriTu" class="control-label"></label>
                        <input asp-for="CoGiaTriTu" class="form-control" />
                        <span asp-validation-for="CoGiaTriTu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoGiaTriDen" class="control-label"></label>
                        <input asp-for="CoGiaTriDen" class="form-control" />
                        <span asp-validation-for="CoGiaTriDen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdTrangThaiHopDong" class="control-label"></label>
                        <select asp-for="IdTrangThaiHopDong" class="form-control" asp-items="ViewBag.IdTrangThaiHopDong"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TyLeThoiGianGiangDay" class="control-label"></label>
                        <input asp-for="TyLeThoiGianGiangDay" class="form-control" />
                        <span asp-validation-for="TyLeThoiGianGiangDay" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
